{
    "$schema": "../schema/default.schema.json",
    "title": "Speed Dash with tasks",
    "widgets": [
        {
            "id": "2",
            "title": "Speed2",
            "chart_type": "line",
            "source": {
                "type": "sqlite",
                "query": "SELECT speed, date FROM speedtest WHERE date > '$start_date' AND date < '$end_date'",
                "path": "/data/app.db"
            },
            "x": {
                "format": {
                    "type": "date",
                    "to": "YYYY-MM-DD HH:mm"
                },
                "key": "date"
            },
            "y": {
                "key": "speed",
                "stroke": "#82ca9d",
                "fill": "#8884d8"
            },
            "debug": true,
            "refresh_interval": "1m"
        },
        {
            "id": "2",
            "title": "Speed Table",
            "chart_type": "table",
            "source": {
                "type": "sqlite",
                "query": "SELECT * FROM speedtest WHERE date > '$start_date' AND date < '$end_date' LIMIT 20",
                "path": "/data/app.db"
            },
            "x": {
                "format": {
                    "type": "date",
                    "to": "YYYY-MM-DD HH"
                },
                "key": "date"
            },
            "y": {
                "key": "speed",
                "stroke": "#82ca9d",
                "fill": "#8884d8"
            },
            "debug": true,
            "refresh_interval": "1m"
        }
    ],
    "tasks": [{
        "every": "30m",
        "command": "/speedtest /data/app.db",
        "cwd": "/",
        "verbose": true
    }]
}